@model EntityLayer.Concrete.Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="content-wrapper-before"></div>
<div class="content-header row">
    <div class="content-header-left col-md-4 col-12 mb-2">
        <h3 class="content-header-title">Yeni Rezervasyon Oluşturma Sayfası</h3>
    </div>
    <div class="content-header-right col-md-8 col-12">
        <div class="breadcrumbs-top float-md-right">
            <div class="breadcrumb-wrapper mr-1">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Ana Sayfa</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Yeni Rezervasyon Oluşturma Sayfası
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Rezervasyon Oluşturma Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Web Sitemiz Traversal üzerinde yer alan lokasyonlar içinde yeni bir rezervasyonu aşağıdaki panelden yapabilirsiniz.</p>
                    <div class="container-fluid py-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="card mb-4">
                                    <div class="card-header pb-0">
                                        <h4>Yeni Rezervasyon Sayfası</h4>
                                    </div>
                                    <div class="card-body px-0 pt-0 pb-2 m-4">
                                        <form method="post">
                                            <div class="form-group">
                                                @Html.Label("Lokasyon :")
                                                @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Kişi Sayısı :")
                                                <input type="text" asp-for="PersonCount" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Rezervasyon Tarihi :")
                                                <input type="date" asp-for="ReservationDate" class="form-control" />
                                            </div>
                                            <div class="form-group">
                                                @Html.Label("Açıklama :")
                                                <input type="text" asp-for="Description" class="form-control" />
                                            </div>
                                            <button class="btn btn-outline-primary">Rezervasyon Yap!</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
