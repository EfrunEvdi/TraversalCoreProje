@using EntityLayer.Concrete
@model List<Reservation>

@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="content-wrapper-before"></div>
<div class="content-header row">
    <div class="content-header-left col-md-4 col-12 mb-2">
        <h3 class="content-header-title">Onay Bekleyen Rezervasyonlarım</h3>
    </div>
    <div class="content-header-right col-md-8 col-12">
        <div class="breadcrumbs-top float-md-right">
            <div class="breadcrumb-wrapper mr-1">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Ana Sayfa</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Onay Bekleyen Rezervasyonlarım
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

@if (Model.Count == 0)
{
    <h4>Hiç onay bekleyen rezervasyonunuz bulunmamaktadır.</h4>
}

else
{
    <!-- Basic Tables start -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Onay Bekleyen Rezervasyonlarım</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <p class="card-text">Web Sitemiz Traversal üzerinde yapmış olduğumuz onay bekleyen rezervasyon listenize aşağıdan erişebilirsiniz. Rehberlerimiz ve diğer çalışanlarımız en kısa sürede sizlere dönüş yapacaktır.</p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Rota Görseli</th>
                                        <th>Lokasyon</th>
                                        <th>Kişi Sayısı</th>
                                        <th>Rezeryasyon Tarihi</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.DestinationID </th>
                                            <td><img src="@item.Destination.Image" class="avatar avatar-sm rounded-circle me-2" alt="spotify"></td>
                                            <td>@item.Destination.City</td>
                                            <td>@item.PersonCount</td>
                                            <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                                            <td>@item.Status</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Basic Tables end -->
}



