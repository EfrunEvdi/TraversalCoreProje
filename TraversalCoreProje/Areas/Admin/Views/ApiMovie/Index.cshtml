@model List<ApiMovieViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">İMDB Top 100 Film Listesi (APİ)  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>FİLM GÖRSELİ</th>
                    <th>FİLM ADI</th>
                    <th>İMDB PUANI</th>
                    <th>YAPIM YILI</th>
                    <th>FRAGMAN</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.rank</td>
                        <td><img src="@item.image" alt="Avatar" class="rounded-circle avatar avatar-s pull-up" /></td>

                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.title</strong></td>
                        <td>@item.rating</td>
                        <td>@item.year</td>
                        <td><a href="@item.trailer" class="btn btn-outline-dark"><i class='bx bxl-youtube'> Fragman</i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
