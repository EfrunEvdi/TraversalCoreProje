@model GetGuideByIDQueryResult

@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <h5 class="card-header">Rehber Güncelleme Sayfası (CQRS MediatR)</h5>
    <form method="post">
        <input type="hidden" asp-for="GuideID" />
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">İSİM SOYİSİM :</label>
                <input class="form-control"
                       type="text"
                       asp-for="Name"
                       placeholder="Rehberin ismi ve soyismi nedir?" />
            </div>
            <div class="mb-3">
                <label class="form-label">AÇIKLAMA :</label>
                <input class="form-control"
                       type="text"
                       asp-for="Description"
                       placeholder="Rehber hangi bölgelere tur düzenliyor?" />
            </div>
            <button class="btn btn-outline-info col-12">Rehberi Güncelle!</button>
        </div>
    </form>
</div>


