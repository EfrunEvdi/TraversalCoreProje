@model AnnouncementUpdateDTO

@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <h5 class="card-header"> Duyuru Güncelleme Sayfası</h5>
    <form method="post">
        <input type="hidden" asp-for="AnnouncementID" />
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">DUYURU BAŞLIĞI :</label>
                <input class="form-control"
                       type="text"
                       asp-for="Title"
                       placeholder="Duyuru başlığını giriniz." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">DUYURU AÇIKLAMASI :</label>
                <input class="form-control"
                       type="text"
                       asp-for="Content"
                       placeholder="Duyuru açıklamasını giriniz." />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <br />
            <button class="btn btn-outline-info col-12">Duyuruyu Güncelle!</button>
        </div>
    </form>
</div>


