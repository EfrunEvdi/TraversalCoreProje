@model List<AppUser>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Kullanıcı Listesi  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>KULLANICI PROFİLİ</th>
                    <th>KULLANICI BİLGİLERİ</th>
                    <th>İŞLEM SEÇİNİZ</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td><img src="@item.ImageUrl" alt="Avatar" class="rounded-circle avatar avatar-s pull-up" /></td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name @item.Surname </strong>(@item.UserName)</td>
                        <td>
                            <a class="dropdown-item" href="/Admin/Role/AssignRole/@item.Id"><i class="bx bx-edit-alt me-1"></i> Rol Ata</a>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


