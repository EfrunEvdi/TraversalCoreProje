@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Rol Listesi  </h5>

    @if (Model.Count > 0)
    {
        <div class="table-responsive text-nowrap">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ROL ADI</th>
                        <th>İŞLEM SEÇİNİZ</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0 text-center">

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-plus"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Role/UpdateRole/@item.Id"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                                        <a class="dropdown-item" href="/Admin/Role/DeleteRole/@item.Id"><i class="bx bx-trash me-1"></i> Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    else
    {
        <i class="fab fa-angular fa-lg text-danger me-3 "></i> <strong class="pb-2 text-center alert alert-danger">Her hangi bir rol ataması yapılmamıştır.</strong>
    }

    <a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Oluştur!</a>
</div>


