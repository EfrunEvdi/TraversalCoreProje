@model CreateRoleViewModel

@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <h5 class="card-header">Yeni Rol Oluşturma Sayfası</h5>
    <form method="post">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">ROL ADI :</label>
                <input class="form-control"
                       type="text"
                       asp-for="RoleName"
                       placeholder="Eklemek istediğiniz rolün adı nedir?" />
            </div>
            <br />
            <button class="btn btn-outline-info col-12">Rolü Oluştur!</button>
        </div>
    </form>
</div>


