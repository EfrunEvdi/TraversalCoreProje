@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <h5 class="card-header">Rol Güncelleme Sayfası</h5>
    <form method="post">
        @Html.HiddenFor(x=>x.RoleID)
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">ROL ADI :</label>
                <input class="form-control"
                       type="text"
                       asp-for="RoleName"
                       placeholder="Güncellemek istediğiniz rolün adı nedir?" />
            </div>
            <br />
            <button class="btn btn-outline-info col-12">Rolü Güncelle!</button>
        </div>
    </form>
</div>

