@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">

@await Component.InvokeAsync("_MemberLayoutHead")

<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-gradient-x-purple-blue" data-col="2-columns">

    <!-- fixed-top-->
    <nav class="header-navbar navbar-expand-md navbar navbar-with-menu navbar-without-dd-arrow fixed-top navbar-semi-light">
        <div class="navbar-wrapper">
            <div class="navbar-container content">
                <div class="collapse navbar-collapse show" id="navbar-mobile">

                    @await Component.InvokeAsync("_MemberLayoutSearch")

                    @await Component.InvokeAsync("_MemberLayoutLanguages")

                    @await Component.InvokeAsync("_MemberLayoutNavbar")

                </div>
            </div>
        </div>
    </nav>

    <!-- ////////////////////////////////////////////////////////////////////////////-->
    @*@await Component.InvokeAsync("_MemberLayoutSidebar")*@

    <div class="main-menu menu-fixed menu-light menu-accordion    menu-shadow " data-scroll-to-active="true" data-img="~/member/theme-assets/images/backgrounds/02.jpg">
        <div class="navbar-header">
            <ul class="nav navbar-nav flex-row">
                <li class="nav-item mr-auto">
                    <a class="navbar-brand" href="index.html">
                        <img class="brand-logo" alt="Chameleon admin logo" src="~/member/theme-assets/images/logo/logo.png" />
                        <h3 class="brand-text"> Traversal</h3>
                    </a>
                </li>
                <li class="nav-item d-md-none"><a class="nav-link close-navbar"><i class="ft-x"></i></a></li>
            </ul>
        </div>
        <div class="main-menu-content">
            <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
                <li class=" nav-item">
                    <a href="/Member/Dashboard/MemberDashboard"><i class="ft-home"></i><span class="menu-title" data-i18n="">Dashboard</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Profile/Index"><i class="ficon ft-user"></i><span class="menu-title" data-i18n="">@localizer["Profilim"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/MyCurrentReservation"><i class="la la-calendar-plus-o"></i><span class="menu-title" data-i18n="">@localizer["Aktif Rotalar"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/MyApprovalReservation"><i class="la la-calendar-o"></i><span class="menu-title" data-i18n="">@localizer["Bekleyen Rotalar"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/MyOldReservation"><i class="la la-calendar-times-o"></i><span class="menu-title" data-i18n="">@localizer["Geçmiş Rotalar"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/NewReservation"><i class="la la-paper-plane"></i><span class="menu-title" data-i18n="">@localizer["Yeni Rezervasyon"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Comment/Index"><i class="la la-comment"></i><span class="menu-title" data-i18n="">@localizer["Yorumlarım"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/LastDestinations/Index"><i class="la la-bookmark"></i><span class="menu-title" data-i18n="">@localizer["Son Rotalar"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Destination/Index"><i class="la la-bullseye"></i><span class="menu-title" data-i18n="">@localizer["Tur Rotaları"]</span></a>
                </li>
            </ul>
        </div>
        <a class="btn btn-danger btn-block btn-glow btn-upgrade-pro mx-1" href="/Default/Index" target="_blank">@localizer["Siteye Git!"]</a>
        <div class="navigation-background"></div>
    </div>

    <div class="app-content content">
        <div class="content-wrapper">

            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- ////////////////////////////////////////////////////////////////////////////-->
    @await Component.InvokeAsync("_MemberLayoutFooter")

    @await Component.InvokeAsync("_MemberLayoutScript")

</body>
</html>
